{
  "name": "portfolio_thuan",
  "version": "2.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write .",
    "update-types": "bunx supabase gen types typescript --local > src/lib/supabase/types/index.ts",
    "check-format": "bun run format && prettier --check .",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "check-types": "tsc --pretty --noEmit",
    "prepare": "husky"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.3.3",
    "turbo": "latest",
    "husky": "^9.1.6"
  },
  "packageManager": "bun@1.1.12",
  "engines": {
    "node": ">=18"
  }
}
