{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"],
      "@ui/*": ["../../packages/ui/src/components/*"],
      "@three/*": ["../../packages/ui/src/threejs/*"],
      "@styles/*": ["../../packages/ui/src/styles/*"],
      "@utils/*": ["../../packages/ui/src/utils/*"],
      "@providers/*": ["../../apps/web/providers/*"],
      "@store/*": ["../../apps/web/store/*"],
      "@server/*": ["../../apps/web/server/*"],
      "@api/*": ["../../apps/web/app/api/*"],
      "@shared/*": ["../../apps/web/shared/*"]
    }
  }
}
